<!DOCTYPE flight_plan SYSTEM "../flight_plan.dtd">

<flight_plan alt="1.5" ground_alt="0" lat0="51.990634" lon0="4.376789" max_dist_from_home="20" name="Rotorcraft Optitrack (Delft)" security_height="0.5">
  <header>
#include "autopilot.h"
</header>
  <waypoints>
    <waypoint name="HOME" x="0.0" y="0.0"/>
    <waypoint name="CLIMB" x="1.2" y="-0.6"/>
    <waypoint name="TD" x="0.8" y="-1.7"/>
    <waypoint name="LANDING" x="2.0" y="2.3"/>

    <waypoint name="t0" x="0.0" y="0.0"/>
    <waypoint name="t1" x="-1.0" y="1.0"/>
    <waypoint name="t2" x="1.0" y="2.0"/>
    <waypoint name="t3" x="1.0" y="1.0"/>

    <waypoint lat="51.9906213" lon="4.3768628" name="FA1"/>
    <waypoint lat="51.9905874" lon="4.3767766" name="FA2"/>
    <waypoint lat="51.9906409" lon="4.3767226" name="FA3"/>
    <waypoint lat="51.9906737" lon="4.3768074" name="FA4"/>

    <waypoint name="_tar0" x="1.0" y="1.0"/>
    <waypoint name="_tar1" x="2.2" y="1.0"/>
    <waypoint name="_tar2" x="2.2" y="0.2"/>
    <waypoint name="_tar3" x="1.0" y="0.2"/>

  </waypoints>
  <sectors>
    <sector color="red" name="Flight_Area">
      <corner name="FA4"/>
      <corner name="FA3"/>
      <corner name="FA2"/>
      <corner name="FA1"/>
    </sector>

    <sector color="blue" name="Target_Pos">
      <corner name="_tar0"/>
      <corner name="_tar1"/>
      <corner name="_tar2"/>
      <corner name="_tar3"/>
    </sector>    

  </sectors>
  <blocks>
    <block name="Wait GPS">
      <call fun="NavKillThrottle()"/>
      <while cond="!GpsFixValid()"/>
    </block>
    <block name="Geo init">
      <while cond="LessThan(NavBlockTime(), 4)"/>
      <call fun="NavSetGroundReferenceHere()"/>
      <!--<call fun="NavSetAltitudeReferenceHere()"/>-->
    </block>
    <block name="Holding point">
      <!--<call fun="isInTargetPos(WP_LANDING)"/>-->
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Start Engine">
      <call fun="NavResurrect()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
    <block name="Takeoff" strip_button="Takeoff" strip_icon="takeoff.png">
      <exception cond="stateGetPositionEnu_f()->z > 1.0" deroute="goto_t0"/>
      <!-- <call fun="NavSetWaypointHere(WP_t0)"/> -->
      <stay climb="nav_climb_vspeed" vmode="climb" wp="CLIMB"/>
    </block>
    <block name="goto_t0" strip_button="Standby" strip_icon="home.png">
      <stay wp="t0"/>
    </block>
    <block name="stay_t0">
      <stay wp="t0"/>
    </block>
    <block name="stay_t3">
      <stay wp="t3"/>
    </block>
    <block name="create_training_set">
      <!-- <path wpts="t1, t2, t3" hmode="route"/> -->
      <!-- <exception cond="InsideTarget_Pos(GetPosX(), GetPosY())" deroute="land here"/> -->
      <!-- Perform target landing, if target region is reached  -->
      <!--<exception cond="isInTargetPos(WP_LANDING)" deroute="land here"/>-->
      <!-- Alternative, if confidence should be taken into account -->
      <!-- <exception cond="isInTargetPos() && isCertain()" deroute="land here"/> -->
      <go from="t0" hmode="route" wp="t1"/>
      <stay until="stage_time>5" wp="t1"/>
      <go wp="t2" hmode="route"/>
      <stay until="stage_time>5" wp="t2"/>
      <go wp="t3" hmode="route"/>
      <stay until="stage_time>5" wp="t3"/>
      <go wp="t0" hmode="route"/>
      <deroute block="stay_t0"/>

    </block>


    <!-- <block name="create_test_set_square"> -->
    <!--   <go from="t0" hmode="route" wp="t1"/> -->
    <!--   <go from="t1" hmode="route" wp="t2"/> -->
    <!--   <go from="t2" hmode="route" wp="t3"/> -->
    <!--   <go from="t3" hmode="route" wp="t4"/> -->
    <!--   <go from="t4" hmode="route" wp="t5"/> -->
    <!--   <go from="t5" hmode="route" wp="t6"/> -->
    <!--   <go from="t6" hmode="route" wp="t7"/> -->
    <!--   <go from="t7" hmode="route" wp="t8"/> -->
    <!--   <deroute block="stay_t0"/> -->
    <!-- </block> -->


    <block name="land here" strip_button="Land Here" strip_icon="land-right.png">
      <call fun="NavSetWaypointHere(WP_TD)"/>
    </block>
    <block name="land">
      <go wp="TD"/>
    </block>
    <block name="flare">
      <exception cond="NavDetectGround()" deroute="Holding point"/>
      <exception cond="!nav_is_in_flight()" deroute="landed"/>
      <call fun="NavStartDetectGround()"/>
      <stay climb="nav_descend_vspeed" vmode="climb" wp="TD"/>
    </block>
    <block name="landed">
      <call fun="NavKillThrottle()"/>
      <attitude pitch="0" roll="0" throttle="0" until="FALSE" vmode="throttle"/>
    </block>
  </blocks>
</flight_plan>
